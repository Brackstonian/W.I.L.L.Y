{% extends '../layouts/base.twig' %}

{% block styles %}
	<link rel="stylesheet" type="text/css" href="{{ assetPath }}/css/home.css">
{% endblock %}

{% block pageTitle %}
	<h1 class="app-main__title">W.I.L.L.Y</h1>
	Version: 0.3.1
{% endblock %}


{% block content %}
	<div class="app-main__content-inner app-main-home">
		{% include '../partials/text-box.twig' with {
			heading: 'Welcome.',
			paragraph: 'Effortless screen sharing and real-time collaboration at your fingertips. No Slack Required!',
			list_items: [
				{ strong: 'Share:', text: 'Broadcast your screen and share the viewing link.' },
				{ strong: 'Draw:', text: 'Enter a viewing link, see the shared screen, and draw on it.' }
			]
		} %}
		{% include '../partials/buttons.twig' with { 
			buttons: [
				{ id: 'shareScreenButton', style: 'primary', label: 'Share' },
				{ id: 'viewScreenButton', style: 'primary', label: 'Draw' }
			],
			wrapper: true
		} %}
	</div>
{% endblock %}

{% block scripts %}
	<script src="{{ assetPath }}/js/home.bundle.js"></script>
{% endblock %}
