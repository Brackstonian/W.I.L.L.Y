{% extends '../layouts/base.twig' %}

{% block title %}W.I.L.L.Y Share ID
{% endblock %}

{% block styles %}
	<link rel="stylesheet" type="text/css" href="{{ assetPath }}/css/shareModal.css">
{% endblock %}

{% block content %}
	<div id="shareModal" class="modal-main modal__shareModal">
		<div class="modal-content">
			<h1 class="sharePage__title">Share ID.</h1>

			<div class="modal__text-container">
				<p id="modalText">URL :
					<strong>https://w-i-l-l-y-web.onrender.com/view/{{id}}<strong></p>
					</p>
				</p>
				<p>OR</p>
				<p id="modalText">ID :
					<strong>{{id}}<strong></p>
						<button id="copyToClipboardUrl" data-shareurl="https://w-i-l-l-y-web.onrender.com/view/{{id}}" class="modal__button">Copy URL to clipboard</button>
						<button id="copyToClipboard" data-shareid="{{id}}" class="modal__button">Copy ID to clipboard</button>
					</p>
				</p>
			</div>

		</div>

	{% endblock %}


	{% block scripts %}
		<script src="{{ assetPath }}/js/shareModal.bundle.js"></script>
	{% endblock %}
